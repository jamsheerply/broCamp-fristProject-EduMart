          .date_box input[type="date"] {
            background-color: ghostwhite;
            width: 5.9rem;
            position: relative;
            z-index: 99;
          }

          .date_box input#dateFrom[type="date"]::after {
            content: "From";
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            left: 0;
            top: 0;
            z-index: -1;
            width: 100%;
            height: 100%;
            background-color: white;
            /* border: 1px solid black; */
          }

          .date_box input#dateTo[type="date"]::after {
            content: "To";
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            left: 0;
            top: 0;
            z-index: -1;
            width: 100%;
            height: 100%;
            background-color: white;
            /* border: 1px solid black; */
          }

          .date_box input[type="date"]::-webkit-datetime-edit-text {
            -webkit-appearance: none;
            display: none;
          }

          .date_box input[type="date"]::-webkit-datetime-edit-month-field {
            -webkit-appearance: none;
            display: none;
          }

          .date_box input[type="date"]::-webkit-datetime-edit-day-field {
            -webkit-appearance: none;
            display: none;
          }

          .date_box input[type="date"]::-webkit-datetime-edit-year-field {
            -webkit-appearance: none;
            display: none;
          }
        </style>

        <section class="section dashboard mt-2">
          <div class="row" id="tb_row">
            <div class="col-12">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Product</th>
                      <th>Order Id</th>
                      <th>User</th>
                      <th>Order Date</th>
                      <th>Quanity</th>
                      <th>Price</th>
                      <th>Payment Status</th>
                      <th>Order Status</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% let counter=0; %> <!-- Initialize a counter variable -->

                      <% if (orderData.length> 0) { %>
                        <% orderData.forEach((data)=> {
                          data.populatedProducts.forEach((product) => {
                          const orderIdString = String(data._id);
                          const lastFourDigits = orderIdString.slice(-4);
                          const orderDate = new Date(data.date);
                          const options = { year: 'numeric', month: 'long', day: 'numeric' };
                          const formattedDate = orderDate.toLocaleDateString('en-US', options);
                          %>
                          <tr>
                            <td>
                              <%= ++counter %>
                            </td> <!-- Assuming you want 1-based indexing -->
                            <td>
                              <%= product.productName %>
                            </td>
                            <td>
                              <%= lastFourDigits %>
                            </td>
                            <td>
                              <%= data.populatedUser[0].firstName %>
                            </td>
                            <td>
                              <%= formattedDate %>
                            </td>
                            <!-- Display other relevant fields from the order and product objects -->
                            <td>
                              <%= data.products[0].quantity %>
                            </td>
                            <td>
                              <%= product.price * data.products[0].quantity %>
                            </td>
                            <td>
                              <%= data.paymentStatus %>
                            </td>
                            <td>
                              <%= data.orderStatus %>
                            </td>
                          </tr>
                          <% }) %>
                            <% }) %>
                              <% } else { %>
                                <tr>
                                  <td colspan="9" style="text-align: center; font-size: xx-large;">Sales Not Found</td>
                                </tr>
                                <% } %>
                  </tbody>


