          <div class="col-12 col-md-2 mb-3 mb-md-0">
            <!-- Left Button -->
            <!-- Button trigger modal -->


            <!-- Button trigger modal -->
            <button type="button" class="btn bg-success " data-toggle="modal" data-target="#addCoupon">
              <img src="/admin/images/plus.png" style=" margin-right: 10px;" alt="">
              <span class="add">Add Coupon</span>
            </button>

            <!-- Modal -->
            <div class="modal fade" id="addCoupon" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
              aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add Coupon</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="couponName" class="col-form-label">Coupon Name</label>
                      <input type="text" class="form-control" id="couponName">
                      <p id="couponNameError" style="color: red;"></p>
                    </div>
                    <div class="form-group">
                      <label for="couponCode" class="col-form-label">Coupon Code</label>
                      <input type="text" class="form-control" id="couponCode">
                      <p id="couponCodeError" style="color: red;"></p>
                    </div>
                    <div class="form-group">
                      <label for="expiryDate" class="col-form-label">Expiry Date</label>
                      <input type="date" class="form-control" id="expiryDate">
                      <p id="expiryDateError" style="color: red;"></p>
                    </div>
                    <div class="form-group">
                      <label for="discountPercentage" class="col-form-label">Discount Percentage %</label>
                      <input type="text" class="form-control" id="discountPercentage">
                      <p id="discountPercentageError" style="color: red;"></p>
                    </div>
                    <div class="form-group">
                      <label for="usageLimit" class="col-form-label">Usage Limit</label>
                      <input type="text" class="form-control" id="usageLimit">
                      <p id="usageLimitError" style="color: red;"></p>
                    </div>
                    <div class="form-group">
                      <label for="minimumOrderAmount" class="col-form-label">Minimum Order Amount</label>
                      <input type="text" class="form-control" id="minimumOrderAmount">
                      <p id="minimumOrderAmountError" style="color: red;"></p>
                    </div>
                    <div class="form-group">
                      <label for="maximumDiscountAmount" class="col-form-label">maximum Discount Amount</label>
                      <input type="text" class="form-control" id="maximumDiscountAmount">
                      <p id="maximumDiscountAmountError" style="color: red;"></p>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-danger" onclick="resetAddCoupon()">Reset</button>
                      <button type="submit" class="btn btn-success" onclick="addCoupon()">Add</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>

        </div>
        <section class="section dashboard mt-4">
          <div class="row">
            <div class="col-12">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">NAME</th>
                      <th scope="col">CODE</th>
                      <th scope="col">USAGE</th>
                      <th scope="col">ADDED DATE</th>
                      <th scope="col">EXPIRY DATE</th>
                      <th scope="col">STATUS</th>
                      <th scope="col">EDIT</th>
                      <th scope="col">DEACTIVE</th>
                    </tr>
                  </thead>
                  <tbody>

                    <% if (couponData.length> 0) {
                      couponData.forEach(data => { %>
                      <tr>
                        <th scope="row">
                          <%= data.couponName %>
                        </th>
                        <td>
                          <%= data.couponCode %>
                        </td>
                        <td>
                          <%= data.usageLimit %>
                        </td>
                        <td>
                          <% const date=new Date(data.createdAt); %>
                            <%= date.toLocaleString('en-US', { weekday: 'short' , year: 'numeric' , month: 'short' ,
                              day: 'numeric' }) %>
                        </td>
                        <td>
                          <% var expiryDate=new Date(data.expiryDate); %>
                            <%= expiryDate.toLocaleDateString('en-US', { weekday: 'short' , year: 'numeric' ,
                              month: 'short' , day: 'numeric' }); %>
                        </td>

                        <td>
                          <%= data.status %>
                        </td>

                        <td><i class="fa-solid fa-pen-to-square" data-toggle="modal" data-target="#editCoupon<%= data._id %>1"
                            onclick="loadEditCoupon( '<%= data._id %>')"></i>
                        </td>
                        <!-- Modal -->
                        <div class="modal fade" id="editCoupon<%= data._id %>1" tabindex="-1" role="dialog"
                          aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Edit Coupon</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                <div class="form-group">
                                  <label for="couponName" class="col-form-label" >Coupon Name</label>
                                  <input type="text" class="form-control" id="couponNameEdit<%= data._id %>">
                                  <p id="couponNameEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="form-group">
                                  <label for="couponCode" class="col-form-label">Coupon Code</label>
                                  <input type="text" class="form-control" id="couponCodeEdit<%= data._id %>">
                                  <p id="couponCodeEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="form-group">
                                  <label for="expiryDate" class="col-form-label">Expiry Date</label>
                                  <input type="date" class="form-control" id="expiryDateEdit<%= data._id %>">
                                  <p id="expiryDateEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="form-group">
                                  <label for="discountPercentage" class="col-form-label">Discount Percentage %</label>
                                  <input type="text" class="form-control" id="discountPercentageEdit<%= data._id %>">
                                  <p id="discountPercentageEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="form-group">
                                  <label for="usageLimit" class="col-form-label">Usage Limit</label>
                                  <input type="text" class="form-control" id="usageLimitEdit<%= data._id %>">
                                  <p id="usageLimitEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="form-group">
                                  <label for="minimumOrderAmount" class="col-form-label">Minimum Order Amount</label>
                                  <input type="text" class="form-control" id="minimumOrderAmountEdit<%= data._id %>">
                                  <p id="minimumOrderAmountEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="form-group">
                                  <label for="maximumDiscountAmount" class="col-form-label">maximum Discount Amount</label>
                                  <input type="text" class="form-control" id="maximumDiscountAmountEdit<%= data._id %>">
                                  <p id="maximumDiscountAmountEditError<%= data._id %>" style="color: red;"></p>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                                  <button type="submit" class="btn btn-success" onclick="EditCoupon('<%= data._id %>')">Edit</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>

                  
                        <td><i class="fa-solid fa-trash-can" data-toggle="modal"
                            data-target="#exampleModalCenterdelete<%=data._id %>"></i></td>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenterdelete<%=data._id %>" tabindex="-1" role="dialog"
                          aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">Deactive Coupon</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
                                Are you sure you want to Deactive this Coupon?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                                <a href="/admin/coupons/deactive_coupon?couponId=<%=data._id %>"><button type="button"
                                    class="btn btn-danger">Deactive</button></a>
                              </div>
                            </div>
                          </div>
                        </div>

                      </tr>
                      <% }); %>
                        <% } else { %>
                          <tr>
                            <td colspan="5">No coupons found</td>
                          </tr>
                          <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </section>

