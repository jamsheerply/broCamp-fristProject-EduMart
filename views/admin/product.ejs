    <div class="pagetitle">
      <h1>Products</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">products</li>
        </ol>
      </nav>
    </div>
    <!-- End Page Title -->
    <div class="row">
      <div class="col-12 col-md-2 mb-3 mb-md-0">
        <!-- Left Button -->
        <!-- Button trigger modal -->
        <a href="add-product">
          <button type="button" class="btn bg-success ">
            <span class="add">Add Product</span>
          </button>
        </a>

      </div>

    </div>
    <section class="section dashboard mt-4">
      <div class="row">
        <div class="col-12">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">PRODUCT NAME</th>
                  <th scope="col">IMAGE</th>
                  <th scope="col">CATEGORY</th>
                  <th scope="col">PRICE</th>
                  <th scope="col">STATUS</th>
                  <th scope="col">ADDED ON</th>
                  <th scope="col">EDIT</th>
                  <th scope="col">DELETE</th>
                </tr>
              </thead>
              <tbody>
                <%if(product.length>0){
                  product.forEach((element)=>{%>


                  <tr>
                    <td>
                      <%=element.productName%>
                    </td>
                    <td><img src="http://localhost:8080/<%= element.imageURL[0].productImage1%>"
                        style="height: 50px; width:50px;" alt=""></td>
                    <td>
                      <%=element.category%>
                    </td>
                    <td>
                      <%=element.price%>
                    </td>
                    <td>
                      <%=element.status%>
                    </td>
                    <td>
                      <%=element.productAdded%>
                    </td>
                    <td>
                      <a href="/admin/edit-product?id=<%=element._id%>"><i class="fa-solid fa-pen-to-square"></i></a>
                    </td>
                    <%if(element.isdeleted){%>
                      <td><i class="fa-solid fa-trash-can"></i></td>
                      <%}else{%>
                        <td><i class="fa-solid fa-rotate-right"></i></td>
                        <%}%>
                  </tr>
                  <%})}else{%>
                    <td colspan="5">Product Not Found</td>
                    <%}%>
              </tbody>
            </table>

          </div>

        </div>

      </div>
      </div><!-- End Recent Sales -->


      </div>
      </div><!-- End Left side columns -->






      </div>
